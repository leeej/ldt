<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PaymentMapper">

	<select id="selectAllPayment" resultType="Payment">
		SELECT * FROM payment
	</select>
	
	<select id="selectByPaymentId" resultType="Payment" parameterType="int">
		SELECT * FROM payment WHERE payment_id = #{payment_id}
	</select>
	
	<select id="selectMaxPaymentId" resultType="int">
		SELECT MAX(payment_id) FROM payment
	</select>

	<insert id="insertPayment" parameterType="Payment">
		INSERT INTO payment
		VALUES (#{admin_id}, #{password})
	</insert>
	
	<delete id="deletePayment" parameterType="int">
		DELETE payment
		WHERE payment_id = #{payment_id}
	</delete>
	
</mapper>