<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PaymentMapper">

	<select id="selectAllPayment" resultType="Payment">
		SELECT * FROM user
	</select>
	
	<select id="selectById" resultType="Admin" parameterType="string">
		SELECT * FROM user WHERE admin_id = #{admin_id}
	</select>

	<insert id="insertPayment" parameterType="Payment">
		INSERT INTO payment
		VALUES (#{admin_id}, #{password})
	</insert>
	
	<delete id="deletePayment" parameterType="">
		DELETE payment
		WHERE payment_id = #{payment_id}
	</delete>
	
</mapper>